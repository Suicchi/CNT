<h1>Public Chat</h1>
<div class="row">
    <div id="chat-messages" class="col s9">
        {{#each chats}}
        <div class="blue-grey card-panel lighten-5 left-align">
            <span class="">{{sender.username}}:</span> {{{chatMsg}}}
        </div>
        {{else}}
        No chat messages
        {{/each}}
    </div>
    <div class="card col s3">
        <h6><strong>Users connected</strong></h6>
        <div id="user-holder" style="padding:10px; overflow-y: scroll; min-height:500px;"></div>
    </div>
</div>

<div class="row">
    <div class="col s11">
        <input type="text" autocomplete="off" name="chatMsg" id="chatMsg" required>
    </div>
    <div class="col s1">
        <input type="hidden" id="username" value="">
        <button class="btn" type="button" onclick="sendMsg()">
            <i class="material-icons">send</i>
        </button>
    </div>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="js/socket.js"></script>