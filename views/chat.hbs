<h1>Public Chat</h1>
<div id="chat-messages">
    {{#each chats}}
        <div class="row">
            <div class="col s2">
                <span>{{sender.username}}:</span>
            </div>
            <div class="col s8">
                {{{chatMsg}}}
            </div>
        </div>
    {{else}}
        No chat messages
    {{/each}}
</div>


<div class="row">
    <div class="col s10">
        <input type="text" autocomplete="off" name="chatMsg" id="chatMsg" required>
    </div>
    <div class="col s2">
        {{!-- WARN: change the hidden input later so that we don't expose it to the browser --}}
        <input type="hidden" id="username" value="{{username}}">
        <button class="btn" type="button" onclick="sendMsg()">
            <i class="material-icons left">send</i>
        </button>
    </div>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="js/socket.js"></script>