{{#if username}}
<h1>{{username}}'s notes</h1>
{{else}}
<h1>{{type}} notes</h1>
{{/if}}
{{#each notes}}
<div class="row">
	<div class="col s12 m6">
		<div class="card">
			<div class="card-content center-align">
				<span class="card-title "><strong>{{title}}</strong></span>
				<p>{{showOnly (rmTags body) 100}}</p><br>
				<div class="chip">
					<p><strong>Created by: </strong> <a href="#">{{author.username}}</a></p>
					<p><strong>Created on: </strong> {{showDate createdAt 'MMMM Do YYYY'}}</p>
				</div>
			</div>
			<div class="card-action center-align">
				<a href="/notes/{{_id}}">Read more</a><br><br>
				{{#if (userIsAuthor author ../user)}}
				<div>
					<form action="/notes/{{_id}}" method="POST">
						<input type="hidden" name="_method" value="DELETE">
						<a class="waves-effect waves-light btn" href="/notes/edit/{{_id}}">Edit
							<i class="material-icons left">edit</i>
						</a>
						<button type="submit" class="waves-effect waves-light btn">Delete
							<i class="material-icons left">delete</i>
						</button>
					</form>
				</div>
				{{/if}}
			</div>
		</div>
	</div>
</div>
{{else}}
<p>No note available</p>
{{/each}}
{{>_add_btn}}